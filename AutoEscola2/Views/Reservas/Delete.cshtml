@model AutoEscola2.Models.Reserva

@{
    ViewData["Title"] = "Delete";
    var reservaTicket = '#' + @Html.DisplayNameFor(model => model.ReservaId);
}

<h1>Excluindo</h1>

<h3>Tem certeza que quer excluir a reserva @reservaTicket?</h3>
<div>
    <h4>Reserva</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reservador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reservador.ClienteId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CarroReservado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CarroReservado.CarroId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataReserva)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataReserva)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ReservaId" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
